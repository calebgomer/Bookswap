extends layout
block content
  p Find Books
  if books.length
    each book in books
      .book
        .name #{book.name}
        .author #{book.author}
        .isbn #{book.isbn}
        .soldBy 
          a(href='mailto:#{book.email}') #{book.seller}
  else
    p We couldn't find any books right now. Here are some online purchasing options.
